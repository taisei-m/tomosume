{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "screens/custom-types"],
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  // "include": ["./screens/**/*"],
  "exclude": ["node_modules"]
}